<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" 
                android:endColor="#808080"
                android:startColor="#a0a0a0"
                android:centerColor="#909090" />

            <stroke android:width="0dp" android:color="#a0a0a0" />

            <corners android:radius="0dp" />

            <padding android:bottom="5dp" android:left="12dp" android:right="12dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" 
                android:endColor="#606060"
                android:startColor="#808080"
                android:centerColor="#707070" />

            <stroke android:width="0dp" android:color="#a0a0a0" />

            <corners android:radius="0dp" />

            <padding android:bottom="5dp" android:left="12dp" android:right="12dp" android:top="5dp" />
        </shape></item>

</selector>