<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><shape>
            <gradient android:angle="270"
                android:startColor="#90c0c0c0"  
                android:centerColor="#90a0a0a0" 
                android:endColor="#90606060" 
                />
            <stroke android:width="1dp" android:color="#909090" />
            <corners android:radius="2dp" />

        </shape></item>
        
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270"
                android:startColor="#50c0c0c0"  
                android:centerColor="#50a0a0a0" 
                android:endColor="#50606060"                
                />
            <stroke android:width="1dp" android:color="#606060" />
            <corners android:radius="2dp" />
        </shape></item>    

</selector>